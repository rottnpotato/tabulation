{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "allowJs": true,
      "noEmit": true,
      "types": [],
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "typeRoots": ["node_modules/@types", "resources/js/types"]
    },
    "include": [
      "resources/js/**/*",
      "resources/js/types/**/*"
    ],
    "exclude": [
      "node_modules",
      "public",
      "storage"
    ]
  }